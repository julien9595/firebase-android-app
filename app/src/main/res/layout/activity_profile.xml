<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="eisti.firebase.MainActivity"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="Text"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:layout_marginBottom="15dp"
        android:inputType="text"
        android:hint="@string/name"
        android:id="@+id/editTextNameProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginBottom="15dp"
        android:inputType="text"
        android:hint="@string/address"
        android:id="@+id/editTextAddressProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewInfosProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="@string/yourInfos"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/textViewNameProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="@string/yourName"/>

    <TextView
        android:id="@+id/textViewAddressProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="@string/yourAddress"/>

    <Button
        android:id="@+id/buttonSaveProfile"
        android:layout_marginBottom="15dp"
        android:text="@string/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonLogOut"
        android:text="@string/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
